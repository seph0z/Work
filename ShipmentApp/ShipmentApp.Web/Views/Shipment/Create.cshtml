@model ShipmentApp.Domain.Contracts.ViewModels.ShipmentViewModel

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SenderName" class="control-label"></label>
            <input asp-for="SenderName" class="form-control" />
            <span asp-validation-for="SenderName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RecipientName" class="control-label"></label>
            <input asp-for="RecipientName" class="form-control" />
            <span asp-validation-for="RecipientName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="control-label"></label>
            <input asp-for="Weight" type="number" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <br />
        <br />
        <div class="form-group">
            <label asp-for="CarrierName" class="control-label"></label>
            <input asp-for="CarrierId" id="products" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <br />
        <br />
        <div class="row justify-content-between">
            <div class="col-5">
                <h4>Sender Address</h4>
                <br />
                <div class="form-group">
                    <label asp-for="SenderAddress.PostCode" class="control-label"></label>
                    <input asp-for="SenderAddress.PostCode" class="form-control" />
                    <span asp-validation-for="SenderAddress.PostCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenderAddress.CountryCode" class="control-label"></label>
                    <input asp-for="SenderAddress.CountryCode" maxlength="2" class="form-control" />
                    <span asp-validation-for="SenderAddress.CountryCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenderAddress.State" class="control-label"></label>
                    <input asp-for="SenderAddress.State" class="form-control" />
                    <span asp-validation-for="SenderAddress.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenderAddress.City" class="control-label"></label>
                    <input asp-for="SenderAddress.City" class="form-control" />
                    <span asp-validation-for="SenderAddress.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenderAddress.Line1" class="control-label"></label>
                    <input asp-for="SenderAddress.Line1" class="form-control" />
                    <span asp-validation-for="SenderAddress.Line1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SenderAddress.Line2" class="control-label"></label>
                    <input asp-for="SenderAddress.Line2" class="form-control" />
                    <span asp-validation-for="SenderAddress.Line2" class="text-danger"></span>
                </div>
            </div>
            <div class="col-5">
                <h4>Recipient Address</h4>
                <br />
                <div class="form-group">
                    <label asp-for="RecipientAddress.PostCode" class="control-label"></label>
                    <input asp-for="RecipientAddress.PostCode" class="form-control" />
                    <span asp-validation-for="RecipientAddress.PostCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecipientAddress.CountryCode" class="control-label"></label>
                    <input asp-for="RecipientAddress.CountryCode" maxlength="2" class="form-control" />
                    <span asp-validation-for="RecipientAddress.CountryCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecipientAddress.State" class="control-label"></label>
                    <input asp-for="RecipientAddress.State" class="form-control" />
                    <span asp-validation-for="RecipientAddress.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecipientAddress.City" class="control-label"></label>
                    <input asp-for="RecipientAddress.City" class="form-control" />
                    <span asp-validation-for="RecipientAddress.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecipientAddress.Line1" class="control-label"></label>
                    <input asp-for="RecipientAddress.Line1" class="form-control" />
                    <span asp-validation-for="RecipientAddress.Line1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecipientAddress.Line2" class="control-label"></label>
                    <input asp-for="RecipientAddress.Line2" class="form-control" />
                    <span asp-validation-for="RecipientAddress.Line2" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            @if (Model != null)
            {
                <input type="submit" value="Update" class="btn btn-primary" />
            }
            else
            {
                <input type="submit" value="Create" class="btn btn-primary" />
            }
        </div>
    </form>
