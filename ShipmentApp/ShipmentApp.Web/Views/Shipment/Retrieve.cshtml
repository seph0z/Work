<div id="logGrid"></div>
<script>
    var dataSource = new kendo.data.DataSource({
    transport: {
        read: {
            url: "https://localhost:44399/api/log/" + "@Model.Id",
            dataType: "json"
        },
        parameterMap: function (data) {
            let dat = data;
            let model = { models: kendo.stringify(data.models) };
            return model;
        }
    },
    batch: true
});
</script>